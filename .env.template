# =============================================================================
# QualiaIA Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# OPENROUTER (Required)
# Get your API key at: https://openrouter.ai/keys
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# TELEGRAM (Required)
# Create bot: Message @BotFather on Telegram -> /newbot
# Get user ID: Message @userinfobot on Telegram
# =============================================================================
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_AUTHORIZED_USER_IDS=123456789,987654321

# =============================================================================
# TWILIO (Optional - for SMS/Voice alerts)
# Sign up at: https://www.twilio.com/try-twilio
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+15551234567
TWILIO_TO_NUMBERS=+15559876543,+15551112222

# =============================================================================
# DISCORD (Optional - for team notifications)
# Create webhooks: Server Settings -> Integrations -> Webhooks
# =============================================================================
DISCORD_ALERTS_WEBHOOK=https://discord.com/api/webhooks/xxx/yyy
DISCORD_STATUS_WEBHOOK=https://discord.com/api/webhooks/xxx/yyy
DISCORD_VENTURES_WEBHOOK=https://discord.com/api/webhooks/xxx/yyy

# =============================================================================
# EMAIL (Optional - for formal communications)
# For Gmail: Use App Password (Security -> 2FA -> App Passwords)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=qualiaIA@yourdomain.com
EMAIL_TO=your_email@gmail.com

# =============================================================================
# CRYPTO WALLET (Required)
# WARNING: Keep private key secure! Never commit to git!
# Generate new wallet: python scripts/generate_wallet.py
# =============================================================================
WALLET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE_64_HEX_CHARACTERS
# Or use a keyfile:
# WALLET_KEYFILE_PATH=/path/to/keyfile.json
# WALLET_KEYFILE_PASSWORD=your_password

# =============================================================================
# DATABASE (Optional - defaults to SQLite)
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./qualiaIA.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/qualiaIA

# =============================================================================
# DASHBOARD (Optional)
# =============================================================================
DASHBOARD_API_KEY=your_secure_api_key_here
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DASHBOARD_CORS_ORIGINS=http://localhost:3000,https://dashboard.qualia.ia

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
PROMETHEUS_PORT=9090

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
